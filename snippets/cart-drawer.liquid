{% comment %} Added by Plus FED on February  04, 2021 {% endcomment %}
{% if settings.plus_cart_customizations %}
	{% render 'plus-cart-styles' %}
{% endif %}

<form action="{{ routes.cart_url }}" method="post" novalidate="" class="cart-drawer-form">
	<div id="cartSlideoutWrapper" class="envy-shopping-right slideout-panel-hidden cart-drawer-right limoniapps-discountninja-drawercart-root">

		<div class="cart-drawer__top">
			<div class="cart-drawer__empty-div"></div>
			<h3 class="type-subheading type-subheading--1 wow fadeIn" {% if settings.plus_cart_customizations %} id="plus--cart-drawer__title" {% endif %}>
				<span class="cart-drawer--title">{{ 'cart.general.title' | t }}</span>
			</h3>
			<a href="#" class="slide-menu cart-close-icon cart-menu-close"><i data-feather="x"></i></a>
		</div>

		<div class="cart-error-box"></div>

		<div class="cart-empty-box">
			{{ 'cart.general.empty' | t }}
		</div>

		<script type="application/template" id="cart-item-template">
			<div class="cart-item">
				<div class="cart-item-image--wrapper">
					<a class="cart-item-link" href="/product">
						<img
							class="cart-item-image"
							src="/product/image.jpg"
							alt=""
						/>
					</a>
				</div>
				<div class="cart-item-details--wrapper">
					<a href="/product" class="cart-item-link cart-item-details--product-title-wrapper">
						<span class="cart-item-product-title"></span>
						<span class="cart-item-variant-title hide"></span>
					</a>

						<div class="cart-item-price-wrapper">
							<span class="sr-only">{{ 'products.general.now_price' | t }}</span>
							<span class="cart-item-price limoniapps-discountninja-cart-item-product-price" data-limoniapps-discountninja-requires-cart-key></span>
							<span class="sr-only">{{ 'products.general.was_price' | t }}</span>
							<span class="cart-item-price-original"></span>
							<span class="cart-item-price-per-unit"></span>
						</div>
                        <div class="limoniapps-discountninja-cart-item-product-comment" data-limoniapps-discountninja-requires-cart-key></div>

						<ul class="order-discount--cart-list" aria-label="{{ 'customer.order.discount' | t }}"></ul>

						<div class="cart-item--quantity-remove-wrapper">
							<div class="cart-item--quantity-wrapper">
								<button type="button" class="cart-item-quantity-button cart-item-decrease" data-amount="-1" aria-label="Reduce item quantity by one">-</button>
								<input type="text" class="cart-item-quantity" min="1" pattern="[0-9]*" aria-label="quantity" />
								<button type="button" class="cart-item-quantity-button cart-item-increase" data-amount="1" aria-label="Increase item quantity by one">+</button>
							</div>

							<div class="cart-item-remove-button-container">
								<button type="button" id="cart-item-remove-button">{{ 'cart.general.remove' | t }}</button>
							</div>
					</div>

				</div>
			</div>
		</script>
		<script type="application/json" id="initial-cart">
			{{ cart | json }}
		</script>

		<div class="cart-items"></div>

		<div class="ajax-cart--bottom-wrapper">

		{% if settings.allow_note %}
		<div class="ajax-cart--checkout-add-note">
				<p>{{ 'cart.general.note' | t }}&hellip;</p>
				<textarea id="note" name="note" class="form-control">{{ cart.note }}</textarea>
		</div>
		{% endif %}

		{% if settings.enable_terms_conditions %}
		<div class="ajax-cart--terms-conditions">
				<div class="form-group">
            <div class="checkbox">
                <label>
                    <input type="checkbox" id="agree" data-terms-agree="{{ 'cart.general.terms_agree' | t | escape }}" />
										{% if settings.terms_conditions_link == blank %}
											{{ 'cart.general.terms_text' | t }}
										{% else %}
											{{ 'cart.general.terms_text_html' | t | replace: '#', settings.terms_conditions_link }}
										{% endif %}
                </label>
            </div>
        </div>
		</div>
		{% endif %}

		<div class="ajax-cart--cart-discount">
			<div class="cart--order-discount-wrapper custom-font ajax-cart-discount-wrapper"></div>
		</div>

		

		<div class="ajax-cart--cart-original-price">
			<span class="cart-item-original-total-price"><span class="money">{{ cart.original_total_price | money }}</span></span>
		</div>

		<div class="ajax-cart--total-price">
			<h5><span class="cart-total-price limoniapps-discountninja-cart-subtotal-price" id="cart-price"><span class="money">{{ cart.total_price | money }}</span></span></h5>
		</div>
		<span class="cart-price-text type-subheading" {% if settings.plus_cart_customizations %} id="plus--cart-drawer__total_value" {% endif %}>{{ 'cart.general.subtotal' | t }}</span>
		<div class="slide-checkout-buttons">
			<button type="submit" name="checkout" class="btn cart-button-checkout">
				<span class="cart-button-checkout-text">{{ 'cart.general.checkout' | t }}</span>
				<div class="cart-button-checkout-spinner lds-dual-ring hide"></div>
			</button>
			{% if additional_checkout_buttons and settings.enable-additional-checkout-buttons %}
				<div class="additional-checkout-buttons">
					{{ content_for_additional_checkout_buttons }}
				</div>
			{% endif %}
			{% if settings.enable_continue_shopping %}
				<a href="#" class="btn btn-default cart-menu-close secondary-button" {% if settings.plus_cart_customizations %} id="plus--cart-drawer__continue-shopping" {% endif %}>{{ 'layout.cart.continue_shopping' | t }}</a><br />
			{% endif %}
		</div>


		</div>

	</div>
</form>
